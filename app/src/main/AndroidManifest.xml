<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfinanceapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views_controller.DetalhesGastos"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".views_controller.EditarGasto"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views_controller.CadastrarUsuario"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".views_controller.MeusGastos"
            android:label="@string/title_activity_tela_principal"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".views_controller.AdicionarGasto"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".views_controller.Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>